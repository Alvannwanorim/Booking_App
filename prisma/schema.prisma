generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Slider {
  id String @id @default(cuid())
  name String 
  imageUrl String

}

model Category {
  id String @id @default(cuid())
  name String
  icon String
  doctors Doctor[]
}

model Doctor {
  id String @id @default(cuid())
  first_name String
  last_name String
  image String
  address String
  patients String?
  years_of_experience String? 
  start_time String
  end_time String
  about String?
  phone String?
  category Category[]
}

